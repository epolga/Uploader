<Window x:Class="Uploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cross-Stitch Uploader" Height="444" Width="700" Background="AliceBlue">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="LightSteelBlue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DeepSkyBlue"/>
                    <Setter Property="BorderBrush" Value="DarkBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="DodgerBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border  DockPanel.Dock="Right"  CornerRadius="10,0,10,0" BorderBrush="LightBlue" BorderThickness="3" Padding="5,0" Margin="5,5,5,7" Background="LightCyan">
        <DockPanel Margin="0,0,0,0">
            <DockPanel DockPanel.Dock="Top" Height="317">
                <DockPanel DockPanel.Dock="Left" Margin="5" Width="420" Height="300">
                    <Border  DockPanel.Dock="Right"  CornerRadius="10,0,10,0" BorderBrush="LightBlue" BorderThickness="3" Padding="5,0" Margin="5" Background="Azure">
                        <DockPanel DockPanel.Dock="Top" Background="Azure" Margin="0,14,0,20" RenderTransformOrigin="0.5,0.5">
                            <DockPanel.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform AngleX="-0.875"/>
                                    <RotateTransform/>
                                    <TranslateTransform X="1.299"/>
                                </TransformGroup>
                            </DockPanel.RenderTransform>
                            <DockPanel DockPanel.Dock="Top" Height="30px" Margin="0" VerticalAlignment="Top">
                                <Label DockPanel.Dock="Left" Content="Folder:" Width="60px"/>
                                <TextBox DockPanel.Dock="Left" x:Name="txtFolderPath" IsReadOnly="True"  Width="238" Height="20px" Margin="5"/>
                                <Button DockPanel.Dock="Right" Content="Browse" Width="57" Click="BtnSelectFolder_Click" Margin="5"/>
                            </DockPanel>
                            <DockPanel  DockPanel.Dock="Top" Height="30px">
                                <Label DockPanel.Dock="Left" Content="# Album:" Width="60px"/>
                                <TextBox DockPanel.Dock="Left" x:Name="txtAlbumNumber" IsReadOnly="True" HorizontalAlignment="Left" Width="100" Height="20px" Margin="5"/>
                            </DockPanel>
                            <DockPanel  DockPanel.Dock="Top" Height="30px">
                                <Label DockPanel.Dock="Left" Content="# Colors:" Width="60px"/>
                                <TextBox DockPanel.Dock="Left" x:Name="txtNColors" IsReadOnly="True" Width="50" Height="20px" Margin="5" HorizontalAlignment="Left"/>
                                <Label DockPanel.Dock="Left" Content="Width:" Width="50px"/>
                                <TextBox DockPanel.Dock="Left" x:Name="txtWidth" IsReadOnly="True" HorizontalAlignment="Left" Width="60" Height="20px" Margin="5"/>
                                <Label DockPanel.Dock="Left" Content="Height:" Width="50
                                   px"/>
                                <TextBox DockPanel.Dock="Left" x:Name="txtHeight" IsReadOnly="True" HorizontalAlignment="Left" Width="60" Height="20px" Margin="5"/>
                            </DockPanel>
                            <DockPanel  DockPanel.Dock="Top" Height="30px">
                                <Label DockPanel.Dock="Left" Content="Title" Width="60px"/>
                                <TextBlock DockPanel.Dock="Left" x:Name="txtTitle" HorizontalAlignment="Left" Width="250" Height="20px" Margin="5"/>
                            </DockPanel>
                            <DockPanel  DockPanel.Dock="Top" Height="125px">
                                <Label DockPanel.Dock="Left" Content="Notes" Width="60px"/>
                                <TextBlock DockPanel.Dock="Left" x:Name="txtNotes" TextWrapping="Wrap"  Width="331" Height="120" Margin="5"/>
                            </DockPanel>
                        </DockPanel>
                    </Border>
                </DockPanel>
                <Border  DockPanel.Dock="Right" Width="200px" Height="200px" Margin="10" CornerRadius="10,0,10,0" BorderBrush="LightBlue" BorderThickness="3" Padding="10px" Background="Azure">
                    <Image x:Name="imgBatch"  MaxWidth="200px"  MaxHeight="200px"></Image>
                </Border>
            </DockPanel>
            <StackPanel DockPanel.Dock="Bottom">
                <Button Grid.Row="2" Content="Upload" Width="55px" Height="20px" Margin="10px" Click="BtnUpload_Click"/>

                <TextBlock x:Name="txtStatus" Height="30px" Margin="5" TextWrapping="Wrap" Foreground="Green" VerticalAlignment="Top"/>



            </StackPanel>

        </DockPanel>
    </Border>
</Window>