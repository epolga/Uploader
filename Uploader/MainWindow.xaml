<Window x:Class="Uploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cross Stitch Uploader" Height="620" Width="820"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <!-- TOP PANEL: Folder select + Folder path + Album ID -->
        <Border DockPanel.Dock="Top" Padding="10" Background="#EEE" CornerRadius="5" Margin="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- Select folder -->
                <Button Content="Select folder"
                        Width="110"
                        Margin="0,0,10,0"
                        Click="BtnSelectFolder_Click"/>

                <!-- Folder path (restored!) -->
                <TextBox x:Name="txtFolderPath"
                         Width="250"
                         Margin="0,0,15,0"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"/>

                <!-- Album ID -->
                <TextBlock Text="Album ID:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="txtAlbumNumber"
                         Width="60"
                         Margin="5"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Image -->
            <Border Grid.Column="0" Margin="5" Padding="5" BorderBrush="#CCC" BorderThickness="1" CornerRadius="5">
                <Image x:Name="imgBatch" Stretch="Uniform"/>
            </Border>

            <!-- SPACER -->
            <Grid Grid.Column="1"/>

            <!-- RIGHT PANEL: Pattern fields -->
            <StackPanel Grid.Column="2" Margin="5">

                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <TextBlock Text="Title:" Width="80"/>
                    <TextBox x:Name="txtTitle" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <TextBlock Text="Notes:" Width="80"/>
                    <TextBox x:Name="txtNotes" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <TextBlock Text="Width:" Width="80"/>
                    <TextBox x:Name="txtWidth" Width="60"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <TextBlock Text="Height:" Width="80"/>
                    <TextBox x:Name="txtHeight" Width="60"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,3">
                    <TextBlock Text="Colors:" Width="80"/>
                    <TextBox x:Name="txtNColors" Width="60"/>
                </StackPanel>

            </StackPanel>
        </Grid>

        <!-- BOTTOM PANEL: Upload + Test Pinterest + log -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Upload"
                        Width="80"
                        Height="26"
                        Margin="10"
                        Click="BtnUpload_Click"/>

                <Button Content="Test Pinterest"
                        Width="120"
                        Height="26"
                        Margin="10"
                        Click="BtnTestPinterest_Click"/>
            </StackPanel>

            <TextBlock x:Name="txtStatus"
                       Height="480"
                       Margin="5"
                       TextWrapping="Wrap"
                       Foreground="Green"/>
        </StackPanel>

    </DockPanel>

</Window>
