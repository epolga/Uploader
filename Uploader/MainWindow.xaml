<Window x:Class="Uploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uploader" Height="300" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Selected Folder:"/>
        <TextBox Grid.Row="0" x:Name="txtFolderPath" IsReadOnly="True" Margin="120,0,80,10" HorizontalAlignment="Stretch"/>
        <Button Grid.Row="0" Content="Browse" HorizontalAlignment="Right" Width="70" Click="BtnSelectFolder_Click"/>

        <Label Grid.Row="1" Content="Album Number:"/>
        <TextBox Grid.Row="1" x:Name="txtAlbumNumber" IsReadOnly="True" Margin="120,0,0,10" HorizontalAlignment="Stretch"/>

        <Button Grid.Row="2" Content="Upload to S3" Margin="0,10,0,0" Click="BtnUpload_Click"/>

        <TextBlock Grid.Row="3" x:Name="txtStatus" Margin="0,10,0,0" TextWrapping="Wrap" Foreground="Green"/>
    </Grid>
</Window>